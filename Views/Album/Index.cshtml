@model List<Album>
@{
  ViewData["Title"] = "Albuns";
  var albumViewModel = new AlbumViewModel();
}
<partial name="_SideNavPartial" />
<div class="gallery-content">
  <img class="modal-opener" href="" data-target="#add-album-modal" src="~/icons/add_circle_24dp.svg" alt="Novo Album" />
  <partial name="_AddAlbumModal" model="new AlbumViewModel()" />
  <div class="album-wrapper">
    @foreach (var album in Model)
    {
      <a asp-action="Read" asp-controller="Album" asp-route-id="@album.AlbumId">
        <div class="card">
          @if (album.Images?.Count == 0)
          {

          }
          else
          {
            <img src="~/images/@album.Images?.First().Picture" alt="Avatar" width="100%" class="overlay-image" />
          }
          <div class="card-container">
            <h4>@album.AlbumName</h4>
            <p>@album.Description</p>
          </div>
          <a asp-action="Edit" asp-controller="Album" asp-route-id="@album.AlbumId">
            <img src="~/icons/pencil-box.svg" class="full-overlay-icon" width="50px">
          </a>
          <img src="~/icons/pencil-box.svg" class="full-overlay-icon" width="50px">
        </div>
      </a>
    }
  </div>
</div>
<script src="~/js/modal.js" type="text/javascript"></script>
